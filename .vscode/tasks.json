{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Backend (FastAPI)",
            "type": "shell",
            "command": ".\\venv\\Scripts\\uvicorn.exe app.main:app --reload --host 127.0.0.1 --port 8000",
            "options": {
                "cwd": "${workspaceFolder}/backend"
            },
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "echo": true
            },
            "isBackground": true,
            "problemMatcher": []
        },
        {
            "label": "Run Flutter Web",
            "type": "shell",
            "command": "flutter run -d edge",
            "options": {
                "cwd": "${workspaceFolder}/mobile"
            },
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "echo": true
            },
            "isBackground": true,
            "problemMatcher": []
        },
        {
            "label": "Run Flutter Chrome",
            "type": "shell",
            "command": "flutter run -d chrome",
            "options": {
                "cwd": "${workspaceFolder}/mobile"
            },
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "echo": true
            },
            "isBackground": true,
            "problemMatcher": []
        },
        {
            "label": "ðŸš€ Run Full Project (Backend + Flutter)",
            "dependsOn": [
                "Run Backend (FastAPI)",
                "Run Flutter Web"
            ],
            "dependsOrder": "parallel",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Install Backend Dependencies",
            "type": "shell",
            "command": ".\\venv\\Scripts\\pip.exe install -r requirements.txt",
            "options": {
                "cwd": "${workspaceFolder}/backend"
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Stop All Servers",
            "type": "shell",
            "windows": {
                "command": "taskkill /F /IM python.exe /T 2>$null; taskkill /F /IM dart.exe /T 2>$null; Write-Host 'Servers stopped'"
            },
            "linux": {
                "command": "pkill -f uvicorn; pkill -f flutter"
            },
            "osx": {
                "command": "pkill -f uvicorn; pkill -f flutter"
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        }
    ]
}
